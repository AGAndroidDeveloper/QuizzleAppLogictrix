<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#2196F3" /> <!-- Green color when the Switch is turned on -->
            <corners android:radius="20dp" /> <!-- Set the radius to achieve rounded corners (adjust the value as needed) -->


        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="#2196F3" /> <!-- Red color when the Switch is turned off -->
            <corners android:radius="20dp" /> <!-- Set the radius to achieve rounded corners (adjust the value as needed) -->
        </shape>
    </item>

</selector>
