<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/awards_button_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Awards"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:layout_weight="1"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/awards_button_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:layout_weight="1"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/awards_button_on"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Top Boards"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:layout_weight="1"
            android:textAllCaps="false" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:contentDescription="TODO"
        android:scaleType="centerCrop"
        android:src="@drawable/quizzleawards_filter_button"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/a" />





    <LinearLayout
        android:id="@+id/linearLayout4"
        android:background="@drawable/quizzleawards_dropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout31">

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="QuizzleMania"
            android:shadowColor="@color/black"
            android:shadowRadius="1.3"
            android:paddingStart="15dp"
            android:layout_marginStart="20dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout41"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
  android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/quizzleawards_dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="start|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="QuizzleMania"
            android:shadowColor="@color/black"
            android:shadowRadius="1.3"
            android:paddingStart="15dp"
            android:layout_marginStart="20dp" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>